<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>basic.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>basic.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendmail</servlet-name>
        <servlet-class>basic.sendmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_hoarding</servlet-name>
        <servlet-class>admin.add_hoarding</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>basic.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regi_half</servlet-name>
        <servlet-class>user.regi_half</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reg_app</servlet-name>
        <servlet-class>user.reg_app</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>accept_app</servlet-name>
        <servlet-class>admin.accept_app</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reject_app</servlet-name>
        <servlet-class>admin.reject_app</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_hoarding</servlet-name>
        <servlet-class>admin.update_hoarding</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_hoarding</servlet-name>
        <servlet-class>admin.delete_hoarding</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendmail</servlet-name>
        <url-pattern>/sendmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_hoarding</servlet-name>
        <url-pattern>/add_hoarding</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regi_half</servlet-name>
        <url-pattern>/regi_half</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reg_app</servlet-name>
        <url-pattern>/reg_app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>accept_app</servlet-name>
        <url-pattern>/accept_app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reject_app</servlet-name>
        <url-pattern>/reject_app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_hoarding</servlet-name>
        <url-pattern>/update_hoarding</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete_hoarding</servlet-name>
        <url-pattern>/delete_hoarding</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
